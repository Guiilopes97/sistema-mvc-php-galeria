# Proteger diretório de uploads
# Permitir apenas acesso a arquivos de imagem

<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Bloquear acesso a outros tipos de arquivo
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear acesso a arquivos ocultos
<FilesMatch "^\.">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Desabilitar execução de scripts
Options -ExecCGI
AddHandler cgi-script .php .pl .py .jsp .asp .sh .cgi
